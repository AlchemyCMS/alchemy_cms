<% if @pictures.empty? %>
  <%= render_message do %>
    <%= Alchemy.t(:no_images_in_archive) %>
  <% end %>
<% else %>
  <%= render partial: 'picture_to_assign',
    collection: @pictures,
    locals: {options: options_from_params, size: @size} %>
  <%= paginate @pictures, theme: 'alchemy', remote: true, hide_per_page_select: true %>
<% end %>
