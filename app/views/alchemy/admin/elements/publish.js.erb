var el = $('.element-editor[data-element-id="<%= @element.id %>"]');
var icon = el.find('> .element-header > .element-handle [class*="icon-"]');
var label = el.find('> .element-toolbar .publish-element-button label');

<%- if @element.public? -%>
  icon.removeClass('icon-not-visible');
  icon.addClass('icon-drag');
  label.text('<%= Alchemy.t(:hide_element) %>');
<%- else -%>
  icon.removeClass('icon-drag');
  icon.addClass('icon-not-visible');
  label.text('<%= Alchemy.t(:show_element) %>');
<%- end -%>

Alchemy.reloadPreview();
