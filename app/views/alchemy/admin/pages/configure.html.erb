<wa-tab-group id="overlay_tabs">
  <wa-tab slot="nav" panel="page_properties">
    <%= Alchemy.t('Properties') %>
  </wa-tab>
  <wa-tab slot="nav" panel="nodes">
    <%= render 'alchemy/admin/nodes/label', count: @page.nodes.size %>
  </wa-tab>
  <wa-tab slot="nav" panel="legacy_urls" id="legacy_urls_label">
    <%= render 'alchemy/admin/legacy_page_urls/label', count: @page.legacy_urls.size %>
  </wa-tab>
  <wa-tab-panel name="page_properties">
    <%= render 'form' %>
  </wa-tab-panel>
  <wa-tab-panel name="nodes">
    <%= render 'alchemy/admin/nodes/page_nodes' %>
  </wa-tab-panel>
  <wa-tab-panel name="legacy_urls">
    <%= render 'legacy_urls' %>
  </wa-tab-panel>
</wa-tab-group>
