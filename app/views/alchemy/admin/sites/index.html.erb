<% label_title = _t("Create #{resource_name}", default: _t('Create')) %>

<% toolbar(
  buttons: [
    {
      icon: 'add',
      label: label_title,
      url: new_resource_path,
      title: label_title,
      hotkey: 'alt+n',
      overlay_options: {
        title: label_title,
        size: resource_window_size
      },
      if_permitted_to: [:create, Alchemy::Site]
    }
  ]
) %>

<div id="archive_all">
  <%= resources_header %>
  <%= render 'table' %>
</div>
