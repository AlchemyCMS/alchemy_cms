<%= form_for [:admin, @content], :remote => true do |f| %>
	<%= f.error_messages %>
	<%= f.hidden_field :element_id %>
	<table>
		<tr>
			<td>
				<%= f.select 'name', @contents.map { |a| [t("content_names.#{a['name']}"), a['name']] } %>
				<%= hidden_field_tag('options', @options) %>
			</td>
			<td class="submit">
				<%= f.button t('save'), :class => 'button' %>
			</td>
		</tr>
	</table>
<% end %>
