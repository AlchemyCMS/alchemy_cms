<%- cache(element) do -%>
  <%= element_view_for(element) do |el| -%>
    <% if element.has_ingredient?(:intro) %>
      <div class="intro"><%= el.render :intro %></div>
    <% end %>
    <h1 class="headline"><%= el.render :headline %></h1>
    <%= el.render :image, image_size: "450x1000", crop: true %>
    <%= el.render :text %>
  <%- end -%>
<%- end -%>
